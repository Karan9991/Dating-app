<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="storiesVM" type="com.karansapplication.app.modules.stories.data.viewmodel.StoriesVM"/>
    </data>
    <FrameLayout android:id="@+id/frameStories"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <ImageView android:id="@+id/imagePhotobg"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            imageRes="@{@drawable/img_photobg}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_photobg"/>
        <FrameLayout android:id="@+id/frameStackphoto"
            android:layout_gravity="start"
            android:layout_height="match_parent" android:layout_width="match_parent">
            <ImageView android:id="@+id/imagePhoto"
                android:layout_gravity="start"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                imageRes="@{@drawable/img_photobg}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_photobg"/>
            <LinearLayout android:id="@+id/linearInterface"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_34pxv"
                android:layout_marginEnd="@dimen/_40pxh"
                android:layout_marginStart="@dimen/_40pxh"
                android:layout_marginTop="@dimen/_40pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearTimeline"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical" style="@style/groupStylecornerRadius_4">
                    <View
                        android:background="@drawable/rectangle_bg_white_a700_radius_1"
                        android:id="@+id/lineLinebg"
                        android:layout_height="@dimen/_2pxv" android:layout_width="@dimen/_295pxh"/>
                    <View
                        android:background="@drawable/rectangle_bg_red_400_radius_1"
                        android:id="@+id/lineLineactive"
                        android:layout_height="@dimen/_2pxv"
                        android:layout_marginEnd="@dimen/_10pxh" android:layout_width="@dimen/_100pxh"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linearHeader"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <LinearLayout android:id="@+id/linearRowphotoOne"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_weight="0.74"
                        android:layout_width="0dp" android:orientation="horizontal">
                        <ImageView android:id="@+id/imagePhotoOne"
                            android:layout_height="@dimen/_48pxh"
                            android:layout_width="@dimen/_48pxh"
                            android:scaleType="centerCrop"
                            circular="@{true}"
                            imageRes="@{@drawable/img_photo_23}"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_photo_23"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtAnnabelle"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_12pxv"
                            android:layout_marginStart="@dimen/_10pxh"
                            android:layout_marginTop="@dimen/_15pxv"
                            android:layout_weight="0.61"
                            android:layout_width="0dp"
                            android:singleLine="true"
                            android:text="@{storiesVM.storiesModel.txtAnnabelle}"
                            style="@style/txtSkModernistskmodernistbold16_3" tools:text="@string/lbl_annabelle"/>
                    </LinearLayout>
                    <ImageButton
                        android:background="@drawable/rectangle_bg_white_a700_33_border_gray_200_radius_15"
                        android:id="@+id/btnClose"
                        android:layout_height="@dimen/_48pxh"
                        android:layout_marginBottom="@dimen/_8pxv"
                        android:layout_marginStart="@dimen/_113pxh"
                        android:layout_width="@dimen/_48pxh"
                        android:paddingHorizontal="@dimen/_19pxh"
                        android:paddingVertical="@dimen/_19pxv"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_close_white_a700_48x48" tools:ignore="ContentDescription"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linearRowyourmessage"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_620pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <EditText
                        android:background="@drawable/rectangle_bg_white_a700_33_border_gray_200_radius_15"
                        android:drawableEnd="@drawable/img_vector_stroke_white_a700_1"
                        android:drawablePadding="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:hint="@string/lbl_your_message"
                        android:id="@+id/etYourmessage"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.83"
                        android:layout_width="0dp"
                        android:paddingBottom="@dimen/_12pxv"
                        android:paddingEnd="@dimen/_16pxh"
                        android:paddingStart="@dimen/_16pxh"
                        android:paddingTop="@dimen/_18pxv"
                        android:singleLine="true"
                        android:text="@={storiesVM.storiesModel.etYourmessageValue}"
                        android:textColorHint="@color/white_A700"
                        style="@style/etSolidRoundedOutline_2" tools:ignore="Autofill"/>
                    <ImageButton
                        android:background="@drawable/rectangle_bg_white_a700_33_border_gray_200_radius_15"
                        android:id="@+id/btnSend"
                        android:layout_height="@dimen/_48pxh"
                        android:layout_marginStart="@dimen/_15pxh"
                        android:layout_width="@dimen/_48pxh"
                        android:paddingHorizontal="@dimen/_15pxh"
                        android:paddingVertical="@dimen/_15pxv"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_send" tools:ignore="ContentDescription"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</layout>
