<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="onboardingOneVM" type="com.karansapplication.app.modules.onboardingone.data.viewmodel.OnboardingOneVM"/>
    </data>
    <LinearLayout android:id="@+id/linearOnboardingOne"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <HorizontalScrollView android:fillViewport="true"
            android:gravity="start"
            android:id="@+id/horizontalScrollHorizontalscrollgirlone"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32pxv"
            android:layout_width="match_parent" android:scrollbars="none">
            <LinearLayout android:id="@+id/linearPhoto"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal" style="@style/groupStylecornerRadius_2">
                <ImageView android:id="@+id/imageGirlOne"
                    android:layout_height="@dimen/_300pxh"
                    android:layout_marginBottom="@dimen/_30pxv"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="@dimen/_200pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_15pxh}"
                    imageRes="@{@drawable/img_girl1}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_girl1"/>
                <ImageView android:id="@+id/imageGirlTwo"
                    android:layout_height="@dimen/_360pxh"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_width="@dimen/_235pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_15pxh}"
                    imageRes="@{@drawable/img_girl2}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_girl2"/>
                <ImageView android:id="@+id/imageGirlThree"
                    android:layout_height="@dimen/_300pxh"
                    android:layout_marginBottom="@dimen/_30pxv"
                    android:layout_marginStart="@dimen/_24pxh"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="@dimen/_200pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_15pxh}"
                    imageRes="@{@drawable/img_girl3}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_girl3"/>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView android:ellipsize="end" android:id="@+id/txtAlgorithm"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_51pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{onboardingOneVM.onboardingOneModel.txtAlgorithm}"
            style="@style/txtSkModernistskmodernistbold24_2" tools:text="@string/lbl_algorithm"/>
        <TextView android:gravity="center_horizontal"
            android:id="@+id/txtUsersgoingthr"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_12pxv"
            android:layout_width="match_parent"
            android:text="@{onboardingOneVM.onboardingOneModel.txtUsersgoingthr}"
            style="@style/txtSkModernistskmodernistregular14_2" tools:text="@string/msg_users_going_thr"/>

        <com.asksira.loopingviewpager.indicator.CustomShapePagerIndicator
            android:id="@+id/indicatorCheckmark"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_28pxv"
            android:layout_width="wrap_content"
            app:drawable_normal="@drawable/indicator_unselected_bg_black_900_63_radius_8"
            app:drawable_selected="@drawable/indicator_selected_bg_red_400_radius_8"
            app:indicator_size="@dimen/_8pxh" app:indicator_spacing="@dimen/_8pxh"/>
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/btnCreateAnAccountOne"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_42pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_18pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_18pxv" android:singleLine="true"
            android:text="@string/msg_create_an_accou"
            android:textAllCaps="false" style="@style/btnSolidRounded" tools:text="@string/msg_create_an_accou"/>
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtConfirmation"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_27pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{onboardingOneVM.onboardingOneModel.txtConfirmation}"
            style="@style/txtSkModernistskmodernistbold14_1" tools:text="@string/msg_already_have_an"/>
    </LinearLayout>
</layout>
