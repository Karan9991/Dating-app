<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="matchVM" type="com.karansapplication.app.modules.match.data.viewmodel.MatchVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearMatch"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <FrameLayout android:id="@+id/framePhotos"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_403pxv"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_53pxv" android:layout_width="@dimen/_294pxh">
            <ImageView android:id="@+id/imagePhoto"
                android:layout_gravity="top|end"
                android:layout_height="@dimen/_264pxh"
                android:layout_marginBottom="@dimen/_25pxv"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_25pxv"
                android:layout_width="@dimen/_199pxh"
                android:scaleType="fitXY"
                cornerRadius="@{@dimen/_15pxh}"
                imageRes="@{@drawable/img_photo_264x199}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_photo_264x199"/>
            <ImageView android:id="@+id/imagePhotoOne"
                android:layout_gravity="bottom|start"
                android:layout_height="@dimen/_264pxh"
                android:layout_marginBottom="@dimen/_22pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_22pxv"
                android:layout_width="@dimen/_199pxh"
                android:scaleType="fitXY"
                cornerRadius="@{@dimen/_15pxh}"
                imageRes="@{@drawable/img_photo_1}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_photo_1"/>
            <ImageButton
                android:background="@drawable/rectangle_bg_white_a700_radius_34_755"
                android:id="@+id/btnFavorite"
                android:layout_gravity="top|center"
                android:layout_height="@dimen/_69pxh"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_112pxh"
                android:layout_marginStart="@dimen/_112pxh"
                android:layout_width="@dimen/_69pxh"
                android:paddingHorizontal="@dimen/_16pxh"
                android:paddingVertical="@dimen/_16pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_favorite" tools:ignore="ContentDescription"/>
            <ImageButton
                android:background="@drawable/rectangle_bg_white_a700_radius_34_755"
                android:id="@+id/btnFavoriteOne"
                android:layout_gravity="bottom|start"
                android:layout_height="@dimen/_69pxh"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="@dimen/_69pxh"
                android:paddingHorizontal="@dimen/_16pxh"
                android:paddingVertical="@dimen/_16pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_favorite_red_400" tools:ignore="ContentDescription"/>
        </FrameLayout>
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtItsamatchJ"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_30pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{matchVM.matchModel.txtItsamatchJ}"
            style="@style/txtSkModernistskmodernistbold34_1" tools:text="@string/msg_it_s_a_match_j"/>
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtStartaconvers"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_2pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{matchVM.matchModel.txtStartaconvers}"
            style="@style/txtSkModernistskmodernistregular14_4" tools:text="@string/msg_start_a_convers"/>
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/btnSayHello"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_84pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_18pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_18pxv" android:singleLine="true"
            android:text="@string/lbl_say_hello"
            android:textAllCaps="false" style="@style/btnSolidRounded" tools:text="@string/lbl_say_hello"/>
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/btnKeepSwiping"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_18pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_18pxv" android:singleLine="true"
            android:text="@string/lbl_keep_swiping"
            android:textAllCaps="false" style="@style/btnSolidRounded_1" tools:text="@string/lbl_keep_swiping"/>
    </LinearLayout>
</layout>
