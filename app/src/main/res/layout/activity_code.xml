<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="codeVM" type="com.karansapplication.app.modules.code.data.viewmodel.CodeVM"/>
    </data>
    <LinearLayout android:id="@+id/linearCode"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <ImageButton
            android:background="@drawable/rectangle_bg_white_a700_border_gray_200_radius_15"
            android:id="@+id/btnArrowleft"
            android:layout_gravity="start"
            android:layout_height="@dimen/_52pxh"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_44pxv"
            android:layout_width="@dimen/_52pxh"
            android:paddingHorizontal="@dimen/_19pxh"
            android:paddingVertical="@dimen/_19pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_arrowleft" tools:ignore="ContentDescription"/>
        <TextView android:ellipsize="end" android:id="@+id/txtTime"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_39pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{codeVM.codeModel.txtTime}"
            style="@style/txtSkModernistskmodernistbold34" tools:text="@string/lbl_00_42"/>
        <TextView android:gravity="center_horizontal"
            android:id="@+id/txtTypetheverifi"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_width="match_parent"
            android:text="@{codeVM.codeModel.txtTypetheverifi}"
            style="@style/txtSkModernistskmodernistregular18" tools:text="@string/msg_type_the_verifi"/>
        <com.mukesh.OtpView android:focusableInTouchMode="true"
            android:id="@+id/otpViewOtpview" android:inputType="number"
            android:itemBackground="@color/white_A700"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_46pxv"
            android:layout_width="wrap_content"
            android:textColor="@color/red_400_7e"
            android:textSize="@dimen/_34pxh" app:OtpItemCount="4"
            app:OtpItemHeight="@dimen/_70pxv"
            app:OtpItemSpacing="@dimen/_9pxh"
            app:OtpItemWidth="@dimen/_66pxh"
            app:OtpLineColor="@color/gray_200" app:OtpViewType="rectangle"/>
        <LinearLayout android:gravity="end"
            android:id="@+id/linearColumnone"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_64pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_3">
            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerCode"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_56pxh"
                android:layout_marginStart="@dimen/_56pxh"
                android:layout_marginTop="@dimen/_21pxv"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_31pxh}" tools:itemCount="3" tools:listitem="@layout/row_code"/>
            <LinearLayout android:gravity="end"
                android:id="@+id/linearRowzero"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_17pxv"
                android:layout_marginEnd="@dimen/_52pxh"
                android:layout_marginStart="@dimen/_52pxh"
                android:layout_marginTop="@dimen/_31pxv"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtZero"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.39"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{codeVM.codeModel.txtZero}"
                    style="@style/txtSkModernistskmodernistregular24" tools:text="@string/lbl_0"/>
                <ImageView android:id="@+id/imageClose"
                    android:layout_height="@dimen/_17pxh"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginStart="@dimen/_103pxh"
                    android:layout_marginTop="@dimen/_5pxv"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_close"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_close"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtSendagain"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_58pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{codeVM.codeModel.txtSendagain}"
            style="@style/txtSkModernistskmodernistbold16" tools:text="@string/lbl_send_again"/>
    </LinearLayout>
</layout>
