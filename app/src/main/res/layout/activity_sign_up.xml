<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="signUpVM" type="com.karansapplication.app.modules.signup.data.viewmodel.SignUpVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearSignup"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <ImageView android:id="@+id/imageTrademark"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_100pxh"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_128pxv"
            android:layout_width="@dimen/_108pxh"
            android:scaleType="fitXY"
            imageRes="@{@drawable/img_trademark}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_trademark"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearSignup1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_83pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylecornerRadius_2">
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtSignuptocont"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_66pxh"
                android:layout_marginStart="@dimen/_66pxh"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{signUpVM.signUpModel.txtSignuptocont}"
                style="@style/txtSkModernistskmodernistbold18" tools:text="@string/msg_sign_up_to_cont"/>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnContinueWithEmail"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_31pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_18pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_18pxv"
                android:singleLine="true"
                android:text="@string/msg_continue_with_e"
                android:textAllCaps="false"
                style="@style/btnSolidRounded" tools:text="@string/msg_continue_with_e"/>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnUsePhoneNumberOne"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_18pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_18pxv"
                android:singleLine="true"
                android:text="@string/msg_use_phone_numbe"
                android:textAllCaps="false"
                style="@style/btnSolidRoundedOutline" tools:text="@string/msg_use_phone_numbe"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumnlineone"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_64pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearOrloginwith"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <View android:background="@color/black_900_66"
                    android:id="@+id/lineLineOne"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginTop="@dimen/_6pxv"
                    android:layout_weight="0.35" android:layout_width="0dp"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtOrsignupwith"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14pxh"
                    android:layout_weight="0.29"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{signUpVM.signUpModel.txtOrsignupwith}"
                    style="@style/txtSkModernistskmodernistregular12_2" tools:text="@string/lbl_or_sign_up_with"/>
                <View android:background="@color/black_900_66"
                    android:id="@+id/lineLineTwo"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginStart="@dimen/_14pxh"
                    android:layout_marginTop="@dimen/_6pxv"
                    android:layout_weight="0.35" android:layout_width="0dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearRowfacebook"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_31pxh"
                android:layout_marginStart="@dimen/_31pxh"
                android:layout_marginTop="@dimen/_23pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageButton
                    android:background="@drawable/rectangle_bg_white_a700_border_gray_200_radius_15"
                    android:id="@+id/btnFacebook"
                    android:layout_height="@dimen/_64pxh"
                    android:layout_width="@dimen/_64pxh"
                    android:paddingHorizontal="@dimen/_18pxh"
                    android:paddingVertical="@dimen/_18pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_facebook" tools:ignore="ContentDescription"/>
                <ImageButton
                    android:background="@drawable/rectangle_bg_white_a700_border_gray_200_radius_15"
                    android:id="@+id/btnGoogle"
                    android:layout_height="@dimen/_64pxh"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_width="@dimen/_64pxh"
                    android:paddingHorizontal="@dimen/_18pxh"
                    android:paddingVertical="@dimen/_18pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_google" tools:ignore="ContentDescription"/>
                <ImageButton
                    android:background="@drawable/rectangle_bg_white_a700_border_gray_200_radius_15"
                    android:id="@+id/btnEye"
                    android:layout_height="@dimen/_64pxh"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_width="@dimen/_64pxh"
                    android:paddingHorizontal="@dimen/_18pxh"
                    android:paddingVertical="@dimen/_18pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_eye" tools:ignore="ContentDescription"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearFooter"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_47pxv"
            android:layout_marginEnd="@dimen/_40pxh"
            android:layout_marginStart="@dimen/_40pxh"
            android:layout_marginTop="@dimen/_78pxv"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtTermsofuse"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_weight="0.48" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{signUpVM.signUpModel.txtTermsofuse}"
                style="@style/txtSkModernistskmodernistregular14_3" tools:text="@string/lbl_terms_of_use"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtPrivacyPolicy"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_32pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.52" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{signUpVM.signUpModel.txtPrivacyPolicy}"
                style="@style/txtSkModernistskmodernistregular14_3" tools:text="@string/lbl_privacy_policy"/>
        </LinearLayout>
    </LinearLayout>
</layout>
